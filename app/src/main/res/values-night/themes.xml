<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Isu_tisbi_xml" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Navy</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <!--        цвет для эконки меню-->
        <item name="colorSecondaryFixedDim">@color/NavyLight</item>
        <item name="colorSecondaryFixed">@color/white</item>
        <item name="colorOnSecondaryFixedVariant">@color/materialBluet</item>


        <item name="colorOnSecondary">@color/black</item>
        <item name="background">@color/Navy</item>
        <item name="colorSurface">@color/purple_500</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?background</item>
        <item name="android:actionBarStyle">@style/MyActionBarNight</item>
    </style>

    <style name="MyActionBarNight" parent="Widget.AppCompat.Toolbar">
        <item name="colorPrimary">?background</item>
    </style>
</resources>